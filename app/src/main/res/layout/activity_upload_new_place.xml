<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UploadNewPlaceActivity">

    <ImageView
        android:id="@+id/newPlaceImageView"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#ff9900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/uwaterloologo"
        tools:layout_editor_absoluteY="54dp" />
    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:hint="Please input your email here"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/eidtTextPlaceDes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="5"
        android:hint="Please input your Description here"
        android:inputType="textMultiLine" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_choose_from_album"
            android:layout_width= "0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="5pt"
            android:text="Album SELECTION" />

        <Button
            android:onClick="takePicture"
            android:id="@+id/button_choose_from_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="5pt"
            android:text="CAMERA Thumbnail" />

        <Button
            android:onClick="dispatchTakePictureIntent"
            android:id="@+id/button_choose_from_camera_full_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="5pt"
            android:text="CAMERA Full_Img" />


    </LinearLayout>



    <Button
        android:onClick="sendMessage"
        android:id="@+id/button_submit_new_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Submit"
































































        />



</androidx.appcompat.widget.LinearLayoutCompat>